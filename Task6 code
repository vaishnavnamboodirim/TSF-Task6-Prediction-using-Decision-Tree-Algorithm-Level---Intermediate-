data <- fread("Iris.csv")
head(data)
data %>% na.omit()
install.packages("rpart.plot")
install.packages("FSelector")
install.packages("caTools")
install.packages("caret")
install.packages("e1071")
library(caTools)
library(rpart)
library(FSelector)
library(caret)
library(e1071)
library(rpart.plot)
str(data)
data <- select(data, -Id)
head(data)
data <- mutate(data,Species= factor(Species))
head(data)
str(data)
set.seed(1234)
sample = sample.split(data$Species,SplitRatio=0.70)
train = subset(data,sample=TRUE)
test = subset(data,sample=FALSE)

tree<- rpart(Species~.,data=train)
tree.species.predicted <- predict(tree,test,type='class')
prp(tree)
confusionMatrix(tree.species.predicted,test$Species)
